{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MockLlmApi": {
    "BaseUrl": "http://localhost:11434/v1/",

    // MODEL CONFIGURATIONS
    // Choose one model configuration below based on what you have installed via Ollama

    // Llama 3 / Llama 3.1 (Recommended - 4K context)
    "ModelName": "llama3",
    "Temperature": 1.2,
    "MaxInputTokens": 4096,

    // TinyLlama (Fast but limited - 2K context)
//    "ModelName": "tinyllama",
//    "Temperature": 0.6,
//    "MaxInputTokens": 2048,

    // Qwen 3 14B (Good quality - 4K context)
//    "ModelName": "qwen3:14b",
//    "Temperature": 1.2,
//    "MaxInputTokens": 4096,

    // Mistral / Mixtral (High quality - 8K context)
//    "ModelName": "mistral",
//    "Temperature": 1.2,
//    "MaxInputTokens": 8192,

    // Llama 2 (Older - 4K context)
//    "ModelName": "llama2",
//    "Temperature": 1.2,
//    "MaxInputTokens": 4096,

    // Phi-3 (Microsoft - 4K context)
//    "ModelName": "phi3",
//    "Temperature": 1.2,
//    "MaxInputTokens": 4096,

    "TimeoutSeconds": 30,
    "EnableVerboseLogging": false,

    // Resilience Policies (Polly)
    "EnableRetryPolicy": true,
    "MaxRetryAttempts": 3,
    "RetryBaseDelaySeconds": 1.0,
    "EnableCircuitBreaker": true,
    "CircuitBreakerFailureThreshold": 5,
    "CircuitBreakerDurationSeconds": 30,

    // GraphQL-specific settings
    "GraphQLMaxTokens": 500,  // Prevents truncation. Use 200-300 for small models, 500-1000 for large models

    // OpenAPI Specifications (commented out by default - uncomment to enable)
    // "OpenApiSpecs": [
    //   {
    //     "Name": "petstore",
    //     "Source": "./specs/petstore.json",
    //     "BasePath": "/petstore",
    //     "EnableStreaming": false
    //   }
    // ],

    "SignalRPushIntervalMs": 5000,
    "HubContexts": [
      {
        "Name": "weather",
        "Description": "Realistic weather data with temperature, conditions, humidity, and wind speed for a single location",
        "IsActive": false
      },
      {
        "Name": "cars",
        "Description": "Vehicle status with plate number, location coordinates, speed, fuel level, and battery charge",
        "IsActive": false
      }
    ]
  }
}
