{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // LLMock API Configuration
  // See docs/OLLAMA_MODELS.md for detailed model configurations and recommendations
  "MockLlmApi": {
    // Multiple Backend Configuration (v2.0+)
    "LlmBackends": [
      {
        "Name": "ollama",
        "Provider": "ollama",
        "BaseUrl": "http://localhost:11434/v1/",
        "ModelName": "llama3",
        "Enabled": true,
        "Weight": 1
      },
      {
        "Name": "lmstudio",
        "Provider": "lmstudio",
        "BaseUrl": "http://localhost:1234/v1/",
        "ModelName": "meta-llama-3.1-8b-instruct",
        "Enabled": true,
        "Weight": 1
      }
    ],
    "Temperature": 1.2,
    "MaxContextWindow": 8192,
    "TimeoutSeconds": 30,

    // Resilience (Polly)
    "EnableRetryPolicy": true,
    "MaxRetryAttempts": 3,
    "RetryBaseDelaySeconds": 1.0,
    "EnableCircuitBreaker": true,
    "CircuitBreakerFailureThreshold": 5,
    "CircuitBreakerDurationSeconds": 30,

    // GraphQL
    "GraphQLMaxTokens": 500,

    // SignalR
    "SignalRPushIntervalMs": 5000,
    "HubContexts": [
      {
        "Name": "weather",
        "Description": "Realistic weather data with temperature, conditions, humidity, and wind speed for a single location",
        "IsActive": false
      },
      {
        "Name": "cars",
        "Description": "Vehicle status with plate number, location coordinates, speed, fuel level, and battery charge",
        "IsActive": false
      }
    ]
  }
}
