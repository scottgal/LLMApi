{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // LLMock API Configuration
  // See docs/OLLAMA_MODELS.md for detailed model configurations and recommendations
  "MockLlmApi": {
    // Multiple Backend Configuration (v2.0+)
    "LlmBackends": [
      {
        "Name": "ollama",
        "Provider": "ollama",
        "BaseUrl": "http://localhost:11434/v1/",
        "ModelName": "qwen2.5-coder:3b",
        "Enabled": true,
        "Weight": 1
      },
      {
        "Name": "lmstudio",
        "Provider": "lmstudio",
        "BaseUrl": "http://localhost:1234/v1/",
        "ModelName": "meta-llama-3.1-8b-instruct",
        "Enabled": true,
        "Weight": 1
      }
    ],
    "Temperature": 1.2,
    "MaxContextWindow": 8192,
    "TimeoutSeconds": 30,

    // Resilience (Polly)
    "EnableRetryPolicy": true,
    "MaxRetryAttempts": 3,
    "RetryBaseDelaySeconds": 1.0,
    "EnableCircuitBreaker": true,
    "CircuitBreakerFailureThreshold": 5,
    "CircuitBreakerDurationSeconds": 30,

    // GraphQL
    "GraphQLMaxTokens": 500,

    // SignalR
    "SignalRPushIntervalMs": 5000,
    "HubContexts": [
      {
        "Name": "weather",
        "Description": "Realistic weather data with temperature, conditions, humidity, and wind speed for a single location",
        "IsActive": false
      },
      {
        "Name": "cars",
        "Description": "Vehicle status with plate number, location coordinates, speed, fuel level, and battery charge",
        "IsActive": false
      }
    ],

    // Rate Limiting & Batching (NEW)
    "EnableRateLimiting": false,
    "RateLimitDelayRange": null,
    "RateLimitStrategy": "Auto",
    "EnableRateLimitStatistics": true,
    "RateLimitStatsWindowSize": 10,

    // Pluggable Tools & Actions (NEW - MCP-compatible)
    "ToolExecutionMode": "Disabled",  // Disabled|Explicit|LlmDriven
    "MaxConcurrentTools": 5,
    "MaxToolChainDepth": 3,
    "IncludeToolResultsInResponse": false,
    "Tools": [
      // Example: HTTP tool to call external API
      // {
      //   "Name": "getUserData",
      //   "Type": "http",
      //   "Description": "Fetch user data from external API",
      //   "Enabled": true,
      //   "TimeoutMs": 10000,
      //   "EnableCaching": false,
      //   "HttpConfig": {
      //     "Endpoint": "https://jsonplaceholder.typicode.com/users/{userId}",
      //     "Method": "GET",
      //     "ResponsePath": null
      //   }
      // },
      // Example: Mock tool for decision trees
      // {
      //   "Name": "getOrderHistory",
      //   "Type": "mock",
      //   "Description": "Get order history for a user from another mock endpoint",
      //   "Enabled": true,
      //   "MockConfig": {
      //     "Endpoint": "/api/mock/users/{userId}/orders",
