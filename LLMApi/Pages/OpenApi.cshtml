@page
@model LLMApi.Pages.OpenApiModel

@{
    ViewData["Title"] = "OpenAPI Manager";
}

@section Styles {
    <style>
        .container {
            grid-template-columns: 2fr 3fr;
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .spec-list {
            max-height: 500px;
            overflow-y: auto;
        }

        .spec-item {
            background: #f8f9fa;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 4px;
            border-left: 4px solid #007bff;
        }

        .spec-item h3 {
            margin-bottom: 8px;
            color: #333;
            font-size: 1.1em;
        }

        .spec-meta {
            font-size: 0.9em;
            color: #666;
            margin-bottom: 8px;
        }

        .endpoint-list {
            margin-top: 10px;
            max-height: 300px;
            overflow-y: auto;
        }

        .endpoint-item {
            background: white;
            padding: 10px;
            margin-bottom: 5px;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .endpoint-info {
            flex: 1;
        }

        .method-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 3px;
            font-size: 0.8em;
            font-weight: bold;
            margin-right: 10px;
        }

        .method-GET { background: #28a745; color: white; }
        .method-POST { background: #007bff; color: white; }
        .method-PUT { background: #ffc107; color: #333; }
        .method-DELETE { background: #dc3545; color: white; }
        .method-PATCH { background: #17a2b8; color: white; }

        .test-button {
            padding: 5px 10px;
            font-size: 0.85em;
        }

        .test-result {
            margin-top: 10px;
            padding: 10px;
            border-radius: 4px;
            background: #e9ecef;
        }

        .test-result.success {
            background: #d4edda;
            border-left: 4px solid #28a745;
        }

        .test-result.error {
            background: #f8d7da;
            border-left: 4px solid #dc3545;
        }

        .test-result pre {
            margin: 5px 0 0 0;
            padding: 10px;
            background: #2d2d2d;
            color: #f8f8f2;
            border-radius: 4px;
            overflow-x: auto;
            font-size: 0.85em;
        }

        .help-section {
            background: #e7f3ff;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 4px solid #007bff;
        }

        .help-section h4 {
            margin-bottom: 8px;
            color: #004085;
        }

        .help-section ul {
            margin-left: 20px;
        }

        .help-section code {
            background: #f8f9fa;
            padding: 2px 6px;
            border-radius: 3px;
            font-family: 'Courier New', monospace;
        }

        .status-loading {
            background: #ffc107;
            animation: pulse-loading 1.5s ease-in-out infinite;
        }

        @@keyframes pulse-loading {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .tabs {
            display: flex;
            border-bottom: 2px solid #dee2e6;
            margin-bottom: 15px;
        }

        .tab {
            padding: 10px 20px;
            cursor: pointer;
            border: none;
            background: transparent;
            color: #6c757d;
            font-weight: 500;
        }

        .tab.active {
            color: #007bff;
            border-bottom: 2px solid #007bff;
            margin-bottom: -2px;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        input[type="text"],
        textarea {
            font-family: 'Courier New', monospace;
        }

        textarea {
            min-height: 200px;
        }
    </style>
}

<div style="margin-bottom: 20px;">
    <div style="display: inline-flex; align-items: center; gap: 10px;">
        <span class="status-indicator" id="connectionStatus"></span>
        <span id="connectionText">Connecting to real-time updates...</span>
    </div>
</div>

    <div class="container">
        <!-- Left Panel: Load Spec -->
        <div>
            <div class="card">
                <h2>Load OpenAPI Spec</h2>

                <div class="help-section">
                    <h4>Quick Start</h4>
                    <ul>
                        <li>Enter a URL to a live OpenAPI spec</li>
                        <li>Or paste raw JSON/YAML directly</li>
                        <li>Spec will be parsed and all endpoints created</li>
                        <li>Test endpoints directly in the browser</li>
                    </ul>
