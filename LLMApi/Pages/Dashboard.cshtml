@section Scripts {
<script>
    // Dashboard state
    let dashboardState = {
        startTime: Date.now(),
        activities: [],
        stats: {
            connections: [],
            streaming: [],
            requests: [],
            responseTimes: []
        },
        signalrHub: null
    };

    // Theme management
    function toggleTheme() {
        const html = document.documentElement;
        const currentTheme = html.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        html.setAttribute('data-theme', newTheme);
        document.getElementById('themeIcon').textContent = newTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
        document.getElementById('themeText').textContent = newTheme === 'dark' ? 'Light' : 'Dark';
        localStorage.setItem('theme', newTheme);
    }

    // Load saved theme
    const savedTheme = localStorage.getItem('theme') || 'light';
    if (savedTheme === 'dark') {
        toggleTheme();
    }

    // Initialize SignalR connection
    async function initializeSignalR() {
        try {
            dashboardState.signalrHub = new signalR.HubConnectionBuilder()
                .withUrl("/hub/mock")
                .withAutomaticReconnect()
                .build();

            dashboardState.signalrHub.on("ReceiveData", (contextId, data) => {
                addActivity('signalr', `SignalR data received for context: ${contextId}`);
                updateStats('connections', 1);
            });

            await dashboardState.signalrHub.start();
            updateServiceStatus('signalr', 'online', 'Connected');
            addActivity('signalr', 'SignalR hub connected successfully');
        } catch (err) {
            console.error('SignalR connection error:', err);
            updateServiceStatus('signalr', 'offline', 'Connection failed');
        }
    }

    // Add activity to feed
    function addActivity(type, message) {
        const activity = {
            type,
            message,
            timestamp: new Date()
        };

        dashboardState.activities.unshift(activity);
        if (dashboardState.activities.length > 50) {
            dashboardState.activities.pop();
        }

        renderActivities();
    }

    // Render activities
    function renderActivities() {
        const activityList = document.getElementById('activityList');
        const html = dashboardState.activities.map(activity => `
            <div class="activity-item ${activity.type}">
                <div class="activity-time">${formatTime(activity.timestamp)}</div>
                <div class="activity-message">${activity.message}</div>
            </div>
        `).join('');

        activityList.innerHTML = html || '<p style="color: var(--text-secondary); text-align: center; padding: 40px;">No recent activity</p>';
    }

    // Format time
    function formatTime(date) {
        return date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
    }

    // Update service status
    function updateServiceStatus(service, status, info) {
        const statusDot = document.getElementById(`${service}-status`);
        const statusInfo = document.getElementById(`${service}-info`);

        if (statusDot) {
            statusDot.className = `status-dot ${status}`;
        }
        if (statusInfo) {
            statusInfo.textContent = info;
        }
    }

    // Update statistics
    function updateStats(type, value) {
        if (!dashboardState.stats[type]) {
            dashboardState.stats[type] = [];
        }

        dashboardState.stats[type].push({
            timestamp: Date.now(),
            value: value
        });

        // Keep only last hour of data
        const oneHourAgo = Date.now() - (60 * 60 * 1000);
        dashboardState.stats[type] = dashboardState.stats[type].filter(s => s.timestamp > oneHourAgo);
    }

    // Update dashboard displays
    function updateDashboard() {
        // Update uptime
        const uptime = Date.now() - dashboardState.startTime;
        const hours = Math.floor(uptime / (1000 * 60 * 60));
        const minutes = Math.floor((uptime % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((uptime % (1000 * 60)) / 1000);
        document.getElementById('uptime').textContent =
            `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;

        // Simulate some dynamic data
        const baseConnections = 12 + Math.floor(Math.random() * 8);
        const baseSessions = 5 + Math.floor(Math.random() * 5);
        const baseRequests = 150 + Math.floor(Math.random() * 50);
        const baseResponse = 45 + Math.floor(Math.random() * 15);

        document.getElementById('activeConnections').textContent = baseConnections;
        document.getElementById('streamingSessions').textContent = baseSessions;
        document.getElementById('apiRequests').textContent = baseRequests;
        document.getElementById('avgResponseTime').innerHTML = `${baseResponse}<span style="font-size: 0.5em;">ms</span>`;

        // Update system info
        document.getElementById('totalRequests').textContent = (baseRequests * 10).toLocaleString();
        document.getElementById('dataTransferred').textContent = `${(baseRequests * 2.3).toFixed(1)} MB`;
        document.getElementById('activeContexts').textContent = Math.floor(baseConnections / 3);
        document.getElementById('errorRate').textContent = `${(Math.random() * 2).toFixed(2)}%`;

        // Update request distribution chart
        const signalrCount = Math.floor(baseRequests * 0.35);
        const sseCount = Math.floor(baseRequests * 0.30);
        const grpcCount = Math.floor(baseRequests * 0.20);
        const openapiCount = Math.floor(baseRequests * 0.15);

        document.getElementById('count-signalr').textContent = signalrCount;
        document.getElementById('count-sse').textContent = sseCount;
        document.getElementById('count-grpc').textContent = grpcCount;
        document.getElementById('count-openapi').textContent = openapiCount;

        const maxCount = Math.max(signalrCount, sseCount, grpcCount, openapiCount);
        document.getElementById('bar-signalr').style.minHeight = `${(signalrCount / maxCount * 100)}%`;
        document.getElementById('bar-sse').style.minHeight = `${(sseCount / maxCount * 100)}%`;
        document.getElementById('bar-grpc').style.minHeight = `${(grpcCount / maxCount * 100)}%`;
        document.getElementById('bar-openapi').style.minHeight = `${(openapiCount / maxCount * 100)}%`;

        // Update change percentages
        document.getElementById('connectionChange').textContent = `+${(Math.random() * 15).toFixed(1)}%`;
        document.getElementById('streamingChange').textContent = `+${(Math.random() * 20).toFixed(1)}%`;
        document.getElementById('requestsChange').textContent = `+${(Math.random() * 25).toFixed(1)}%`;
        document.getElementById('responseChange').textContent = `-${(Math.random() * 10).toFixed(1)}%`;

        // Update mini charts
        updateMiniChart('connectionChart', baseConnections);
        updateMiniChart('streamingChart', baseSessions);
        updateMiniChart('requestsChart', baseRequests / 10);
        updateMiniChart('responseChart', baseResponse);
    }

    // Update mini charts
    function updateMiniChart(chartId, currentValue) {
        const chart = document.getElementById(chartId);
        if (!chart) return;

        // Generate 10 bars for the mini chart
        const bars = [];
        for (let i = 0; i < 10; i++) {
            const variation = 0.7 + (Math.random() * 0.6);
            const height = (currentValue * variation / currentValue) * 80;
            bars.push(`<div class="chart-bar" style="left: ${i * 10}%; height: ${height}px;"></div>`);
        }
        chart.innerHTML = bars.join('');
    }

    // Refresh dashboard
    function refreshDashboard() {
        const refreshBtn = document.querySelector('.refresh-btn');
        refreshBtn.style.animation = 'none';
        setTimeout(() => {
            refreshBtn.style.animation = '';
        }, 10);

        updateDashboard();
        addActivity('info', 'Dashboard refreshed manually');
    }

    // Clear all data
    function clearAllData() {
        if (confirm('Are you sure you want to clear all dashboard data?')) {
            dashboardState.activities = [];
            dashboardState.stats = {
                connections: [],
                streaming: [],
                requests: [],
                responseTimes: []
            };
            renderActivities();
            addActivity('info', 'Dashboard data cleared');
        }
    }

    // Simulate some activity
    function simulateActivity() {
        const activities = [
            { type: 'signalr', msg: 'New SignalR context created: IoT Sensors' },
            { type: 'sse', msg: 'SSE streaming session started: Stock Ticker' },
            { type: 'grpc', msg: 'gRPC method invoked: GetUserById' },
            { type: 'openapi', msg: 'OpenAPI spec loaded: Petstore API' },
            { type: 'signalr', msg: 'SignalR data broadcasted to 5 clients' },
            { type: 'sse', msg: 'SSE continuous stream: 127 events sent' },
            { type: 'grpc', msg: 'gRPC service health check: OK' },
            { type: 'openapi', msg: 'API endpoint tested: GET /api/users' }
        ];

        const activity = activities[Math.floor(Math.random() * activities.length)];
        addActivity(activity.type, activity.msg);
    }

    // Initialize dashboard
    document.addEventListener('DOMContentLoaded', () => {
        initializeSignalR();
        updateDashboard();
        renderActivities();

        // Add initial activities
        addActivity('info', 'Dashboard initialized successfully');

        // Update dashboard every 3 seconds
        setInterval(updateDashboard, 3000);

        // Simulate activity every 5-10 seconds
        setInterval(() => {
            if (Math.random() > 0.3) {
                simulateActivity();
            }
        }, Math.random() * 5000 + 5000);
    });
</script>
