<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>

    <!-- NuGet Package Metadata -->
    <PackageId>mostlylucid.mockllmapi</PackageId>
    <Version>1.1.0</Version>
    <Authors>mostlyLucid</Authors>
    <Company>mostlyLucid</Company>
    <Description>A lightweight ASP.NET Core middleware for generating realistic mock API responses using local LLMs (via Ollama). Includes SignalR real-time streaming with lifecycle management. Perfect for prototyping, demos, and testing. Compatible with .NET 8.0 and later.</Description>
    <PackageTags>llm;mock;api;ollama;aspnetcore;testing;demo;mostlylucid;net8;net9;signalr;realtime</PackageTags>
    <RepositoryUrl>https://github.com/scottgal/LLMApi</RepositoryUrl>
    <PackageLicenseExpression>Unlicense</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReleaseNotes>Latest: v1.1.0 — Major SignalR enhancements: context lifecycle management (start/stop/delete), connection tracking, interactive management UI with quick-start examples, form-encoded data support. Full details in 'release notes.txt'.</PackageReleaseNotes>
    <RootNamespace>mostlylucid.mockllmapi</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0" />
    <PackageReference Include="System.IO.Hashing" Version="8.0.0" />
  </ItemGroup>

    <ItemGroup>
        <None Include=".\icon.png" Pack="true" PackagePath="">
            <Link>Properties\icon.png</Link>
        </None>
        <None Include="..\README.md" Pack="true" PackagePath="">
            <Link>Properties\README.md</Link>
        </None>
        <None Include=".\release notes.txt" Pack="true" PackagePath="">
            <Link>Properties\release notes.txt</Link>
        </None>
    </ItemGroup>

</Project>
