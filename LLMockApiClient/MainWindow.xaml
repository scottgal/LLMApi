<Window x:Class="LLMockApiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LLMockApiClient"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.IsIconVisible="True"
        mc:Ignorable="d"
        Title="LLMock API Client" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Title -->
                <StackPanel Grid.Row="0" Margin="16,20,16,20">
                    <TextBlock Text="LLMock API" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock Text="Client" FontSize="16" Opacity="0.7"/>
                </StackPanel>

                <!-- Navigation Items -->
                <ListBox x:Name="NavigationList" Grid.Row="1"
                         BorderThickness="0"
                         Background="Transparent"
                         SelectionChanged="NavigationList_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="Margin" Value="4,2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem x:Name="DashboardNav" Tag="Dashboard" IsSelected="True">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="SignalRNav" Tag="SignalR">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="SignalR" VerticalAlignment="Center"/>
                            <Ellipse x:Name="SignalRIndicator" Width="8" Height="8" Fill="Gray" Opacity="0.3"
                                     Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="SSENav" Tag="SSE">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📡" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="SSE Streaming" VerticalAlignment="Center"/>
                            <Ellipse x:Name="SSEIndicator" Width="8" Height="8" Fill="Gray" Opacity="0.3"
                                     Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="OpenApiNav" Tag="OpenAPI">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="OpenAPI" VerticalAlignment="Center"/>
                            <Ellipse x:Name="OpenApiIndicator" Width="8" Height="8" Fill="Gray" Opacity="0.3"
                                     Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="GrpcNav" Tag="gRPC">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚡" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="gRPC" VerticalAlignment="Center"/>
                            <Ellipse x:Name="GrpcIndicator" Width="8" Height="8" Fill="Gray" Opacity="0.3"
                                     Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="PlayNav" Tag="Play">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎮" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Play with APIs" VerticalAlignment="Center"/>
                            <Ellipse x:Name="MockApiIndicator" Width="8" Height="8" Fill="Gray" Opacity="0.3"
                                     Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ServerLogsNav" Tag="ServerLogs">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📜" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Server Logs" VerticalAlignment="Center"/>
                            <Ellipse x:Name="ServerIndicator" Width="8" Height="8" Fill="Gray" Opacity="0.3"
                                     Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>

                <!-- Settings Footer -->
                <StackPanel Grid.Row="2" Margin="16,12">
                    <Separator Margin="0,0,0,12"/>
                    <Button x:Name="ThemeToggleButton" Content="🌙 Dark Mode" HorizontalAlignment="Stretch"
                            Click="ThemeToggle_Click" Margin="0,0,0,8"/>
                    <Button Content="⚙️ Settings" HorizontalAlignment="Stretch"
                            Click="SettingsButton_Click" Style="{StaticResource AccentButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Frame x:Name="ContentFrame" Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Margin="0"/>
    </Grid>
</Window>
