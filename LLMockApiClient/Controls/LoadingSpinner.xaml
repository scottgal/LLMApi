<UserControl x:Class="LLMockApiClient.Controls.LoadingSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="40" Height="40">
    <Viewbox>
        <Grid Width="40" Height="40">
            <Ellipse Width="40" Height="40" StrokeThickness="4"
                     Stroke="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                     Opacity="0.3"/>
            <Ellipse x:Name="SpinnerArc" Width="40" Height="40" StrokeThickness="4"
                     Stroke="{DynamicResource SystemControlForegroundAccentBrush}"
                     StrokeDashArray="25 15"
                     RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="SpinTransform" Angle="0"/>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="SpinTransform"
                                               Storyboard.TargetProperty="Angle"
                                               From="0" To="360"
                                               Duration="0:0:1.5"
                                               AutoReverse="False"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
        </Grid>
    </Viewbox>
</UserControl>
