<Page x:Class="LLMockApiClient.Pages.PlayWithApisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Play with Mock APIs">

    <Grid Margin="32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="ðŸŽ® Play with Mock APIs" FontSize="32" FontWeight="SemiBold" Margin="0,0,0,8" />
                <TextBlock Text="Interactive API testing playground" FontSize="16" Opacity="0.7" />
            </StackPanel>

            <!-- Request Configuration -->
            <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Method:" VerticalAlignment="Center" Margin="0,0,0,12" />
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="MethodComboBox" SelectedIndex="0" Margin="0,0,0,12">
                        <ComboBoxItem Content="GET" />
                        <ComboBoxItem Content="POST" />
                        <ComboBoxItem Content="PUT" />
                        <ComboBoxItem Content="DELETE" />
                        <ComboBoxItem Content="PATCH" />
                    </ComboBox>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Path:" VerticalAlignment="Center" Margin="0,0,0,12" />
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="PathTextBox" Text="/users" Margin="0,0,0,12" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Shape (JSON):" VerticalAlignment="Top"
                               Margin="0,8,0,12" />
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="ShapeTextBox"
                             Text="{}{&quot;id&quot;:0,&quot;name&quot;:&quot;string&quot;,&quot;email&quot;:&quot;string&quot;}"
                             Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,12" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Body (JSON):" VerticalAlignment="Top"
                               Margin="0,8,0,12" />
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="BodyTextBox"
                             Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,12" />

                    <Button Grid.Row="4" Grid.Column="1" Content="ðŸš€ Send Request"
                            Click="SendRequest_Click" HorizontalAlignment="Left" Padding="20,10" />
                </Grid>
            </Border>

            <!-- Response Display -->
            <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="8" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Response" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
                        <TextBox x:Name="ResponseTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 MinHeight="300"
                                 FontFamily="Consolas"
                                 Background="#1E1E1E"
                                 Foreground="#D4D4D4" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Request History Sidebar -->
        <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8" Padding="16" Margin="16,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="ðŸ“œ Request History" FontWeight="SemiBold" Margin="0,0,0,12" />

                <ListBox Grid.Row="1" x:Name="HistoryListBox" SelectionChanged="History_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="{Binding Method}" FontWeight="SemiBold" FontSize="11" />
                                <TextBlock Text="{Binding Path}" FontSize="10" Opacity="0.7"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" FontSize="9" Opacity="0.5" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="2" Content="ðŸ—‘ï¸ Clear History" Click="ClearHistory_Click"
                        Padding="8,4" Margin="0,8,0,0" HorizontalAlignment="Stretch" />
            </Grid>
        </Border>
    </Grid>
</Page>